{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "allowJs": false,
    "sourceMap": false,
    "noEmit": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "@apps-mooc-backend/*": ["./src/apps/mooc/backend/*"],
      "@contexts-mooc-users/*": ["./src/contexts/mooc/users/*"],
      "@contexts-shared-domain/*": ["./src/contexts/shared/domain/*"]
    } 
  },
  "include": [
    "src/**/**.ts",
    "tests/**/**.ts",
    "./**.js"
  ],
  "exclude": ["node_modules"]
}
